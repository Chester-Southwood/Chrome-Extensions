{
    "name": "Image Sizer",
    "version": "1.0",
    "manifest_version":2,
    "description": "Used to minimize images too big for screen",
    "permissions":["contextMenus"],
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
                ],
                "js":["size.js"]
        }
    ],
    "browser_action": {
        "default_icon": "download.png",
        "default_title": "Image Sizer"
    }
}